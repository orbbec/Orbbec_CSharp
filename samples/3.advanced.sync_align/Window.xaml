<Window x:Class="Orbbec.SyncAlignWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orbbec"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Closing="Control_Closing"
        Title="SyncAlign" Height="700" Width="1200" x:Name="control">
    <Grid>
        <Image x:Name="imgColor" />
        <Image x:Name="imgDepth" Opacity="0.5"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <CheckBox x:Name="syncCheckBox" Content="Sync" VerticalContentAlignment="Center" Foreground="YellowGreen"
                      FontSize="18" Margin="10" Click="Sync_Click" />
            <RadioButton x:Name="hwAlign" Content="HW Align" VerticalContentAlignment="Center" Foreground="YellowGreen"
                         FontSize="18" Margin="10" />
            <RadioButton x:Name="swAlign" Content="SW Align" VerticalContentAlignment="Center" Foreground="YellowGreen"
                         FontSize="18" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
